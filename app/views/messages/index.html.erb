<h1>Messages</h1>

<div id="messages">
  <% @messages.each do |message| %>
    <%= render message %>
    <p>
      <div class="d-flex justify-content-between">
        <%= link_to "Show this message", discussion_message_path(message.discussion, message) %>
        <%= button_to "Destroy this message", discussion_message_path(@discussion, message), method: :delete, data: { confirm: "Are you sure?" }  %>
      </div>
    </p>
  <% end %>
</div>

<%= link_to "New message", new_discussion_message_path(@discussion) %>
<%= link_to "Back to options", discussions_path %>
